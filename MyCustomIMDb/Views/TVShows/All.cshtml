@model IEnumerable<AllTVShowsQueryModel>

    @{ ViewBag.Title = "All TvShows"; }

    <div class="row">
        @foreach (var tvshow in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img class="card-img-top" src="@tvshow.ImageURL" alt="@tvshow.Title @tvshow.PlotSummary">
                    <div class="card-body text-center">
                        <h5 class="card-title text-center">@tvshow.Title (@tvshow.ReleaseDate)</h5>
                        <a asp-controller="Movies" asp-action="Details" asp-route-id="@tvshow.Id" class="btn btn-primary">View</a>
                        <a asp-controller="Movies" asp-action="Delete" asp-route-id="@tvshow.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@tvshow.Id" class="btn btn-warning">Edit</a>
                        @*<a asp-controller="Movies" asp-action="Rate" asp-route-id="@movie.Id" class="btn btn-primary">Rate</a>*@

