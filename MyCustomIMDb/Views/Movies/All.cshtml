@model IEnumerable<AllMoviesQueryModel>

@{ ViewBag.Title = "All Movies"; }

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@movie.ImageURL" alt="@movie.Title @movie.PlotSummary">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@movie.Title (@movie.ReleaseDate)</h5>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View</a>
                    <a asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
                    <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning">Edit</a>
                    @*<a asp-controller="Movies" asp-action="Rate" asp-route-id="@movie.Id" class="btn btn-primary">Rate</a>*@

                    @*@if (ViewBag.AllowCarEdit == true || User.IsAdmin())
                    {
        <a asp-controller="Cars" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Cars" asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>}*@
                </div>
            </div>
        </div>
     }
</div>
